{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python File",
            "type": "shell",
            "command": "uv run python ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "icon": {
                "id": "play",
                "color": "terminal.ansiGreen"
            },
            "options": {
                "statusbar": {
                    "color": "#B4F8C8",
                }
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "uv run pytest pytests/",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "icon": {
                "id": "beaker",
                "color": "terminal.ansiBlue"
            },
            "options": {
                "statusbar": {
                    "color": "#A0E7E5"
                }
            }
        },
        {
            "label": "Run Specific Test",
            "type": "shell",
            "command": "uv run pytest ${input:testPath}",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "icon": {
                "id": "microscope",
                "color": "terminal.ansiCyan"
            },
            "options": {
                "statusbar": {
                    "color": "#B4C8EA"
                }
            }
        },
        {
            "label": "Run Pre-commit Hooks",
            "type": "shell",
            "command": "pre-commit run --all-files",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": [],
            "icon": {
                "id": "check",
                "color": "terminal.ansiYellow"
            },
            "options": {
                "statusbar": {
                    "color": "#FBE7C6"
                }
            }
        },
        {
            "label": "Run Hydra Script Simple",
            "type": "shell",
            "command": "uv run python hydra_run.py",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "icon": {
                "id": "gear",
                "color": "terminal.ansiMagenta"
            },
            "options": {
                "statusbar": {
                    "color": "#FFCAD4"
                }
            }
        },
        {
            "label": "Run Hydra with mic",
            "type": "shell",
            "command": "uv run python hydra_run.py --config-name=mic_01 pipeline.nodes.0.device=9 pipeline.nodes.6.device=9",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "icon": {
                "id": "zap",
                "color": "terminal.ansiGreen"
            },
            "options": {
                "statusbar": {
                    "color": "#C7CEEA"
                }
            }
        },
        {
            "label": "Run Grid Search with optuna",
            "type": "shell",
            "command": "uv run python hydra_run.py --multirun --config-name optuna_01",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "icon": {
                "id": "search",
                "color": "terminal.ansiMagenta"
            },
            "options": {
                "statusbar": {
                    "color": "#F0DBDB"
                }
            }
        },
        {
            "label": "List Audio Devices",
            "type": "shell",
            "command": "uv run python -c \"import sounddevice as sd; print(sd.query_devices())\"",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "icon": {
                "id": "mic",
                "color": "terminal.ansiYellow"
            },
            "options": {
                "statusbar": {
                    "color": "#FFD6BA"
                }
            }
        },
        {
            "label": "Run Agent",
            "type": "shell",
            "command": "uv run python3 -m synchroagent.main",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "icon": {
                "id": "robot",
                "color": "terminal.ansiBlue"
            },
            "options": {
                "statusbar": {
                    "color": "#B4E4FF"
                }
            }
        }
    ],
    "inputs": [
        {
            "id": "testPath",
            "description": "Path to test file or directory",
            "default": "pytests/",
            "type": "promptString"
        }
    ]
}
